<configuration scan="true">
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
          <pattern>%d %p [%logger] \(%t\) - %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="com.giladam" level="INFO" />

    <root level="INFO">
        <appender-ref ref="CONSOLE" />
    </root>

</configuration>